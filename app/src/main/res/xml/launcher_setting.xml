<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Xposed设置">
        <CheckBoxPreference
            android:key="enableThemePatch"
            android:summary="支持主题美化 7.1.2 - 7.3.0"
            android:title="主题和谐" />
        <CheckBoxPreference
            android:key="enableCheckInstaller"
            android:summary="禁止安装APP的时候执行安全扫描"
            android:title="禁用安全检测" />
        <CheckBoxPreference
            android:key="enableCTS"
            android:summary="使用原生的安装界面替换Flyme的安装界面"
            android:title="原生安装界面" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Flyme桌面布局(切换可能导致图标异常,需要清除桌面数据)">
        <CheckBoxPreference
            android:key="launcherMMO"
            android:summary="使用5x5宫格布局"
            android:title="修改桌面布局" />

    </PreferenceCategory>

    <PreferenceCategory android:title="隐藏ROOT">
        <CheckBoxPreference
            android:key="hideRootWithUpdater"
            android:summary="解决ROOT后无法OTA"
            android:title="系统更新" />
        <CheckBoxPreference
            android:key="hideRootWithMeiZuPay"
            android:summary="ROOT也能用魅族Pay"
            android:title="魅族Pay" />
    </PreferenceCategory>

</PreferenceScreen>